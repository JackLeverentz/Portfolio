<% include ./partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/contact.css">

<!--Title-->
<section class="container">
    <div clas="row text-center">
        <div class="col-lg-12 text-center">
            <h1 id="heading">Send Me a Message</h1>
            <hr>
            <p>
                I love answering questions, learning new things, meeting new people, and gaining new opportunities. Feel free
                to send me a message at any time! Also feel free to find and contact me on the other platforms
                listed below!
            </p>
        </div>
    </div>
</section>

<!--Contact Form-->
<section class="container">
        <div class="col-lg-12">
            <form action="/tickets" method="POST">
                <input id="name" class="form text-start" type="text" name="ticket[name]" placeholder="Name" required/>
                <input id="email" class="form text-start" type="text" name="ticket[email]" placeholder="Email" required/>
                <textarea id="message" class="form form-control" type="text" name="ticket[message]" placeholder="Your Message" style="width: 100%; height: 150px;" required></textarea>
                <% if(success && success.length > 0){ %>
                    <div class="container">
                        <div class="alert alert-success" role="alert">
                            <%=success%>
                        </div>
                    </div> 
                <% } %> 
                <button id="send" type="submit" class="btn">Send</button>        
            </form>   
        </div>
</section>
  
<%include ./partials/footer %>