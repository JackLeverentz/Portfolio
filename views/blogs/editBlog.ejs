<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/blogs.css">

<section class="container">
    <div class="row text-center">
        <div class="col-lg-12">
            <h3 id="heading">Edit: <%=blog.title%></h3>
            <hr>
                <form action = "/blogs/<%=blog._id%>?_method=PUT" method="POST">
                    <input class="form-control form-control-lg" type="text" name="blog[title]" value="<%=blog.title%>">
                    <input class="form-control form-control-lg" type="text" name="blog[image]" value="<%=blog.image%>">
                    <textarea id="message" class="form-control" type="text" name="blog[body]"  style="width: 100%; height: 150px;"><%=blog.body%></textarea>
                    <button id="send" type="submit" class="btn text-start">Update</button>
                </form>   
        </div>
    </div>
</section>


