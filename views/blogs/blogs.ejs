<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/blogs.css">

<section class="container">   
    <div class="row">
        <div class="lg-col-12"></div>    
            <% blogs.forEach(function(blog){ %>
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="<%=blog.image%>" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title"><%=blog.title%></h5>
                            <p id="showTime"><%= blog.created.toDateString()%></p>
                            <p class="card-text"><%- blog.body.substring(0, 100)%>...</p>
                            <a href="/blogs/<%=blog._id%>">Read More</a>
                        </div>
                    </div> 
            <% }); %>     
        </div>
    </div>              
</section>

<%include ../partials/footer %>