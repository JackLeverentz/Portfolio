<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="/stylesheets/blogs.css">

<section class="container">
    <div class="row text-center">
        <div class="col-lg-12">
            <h3 id="heading">Hi Jack, write your blog here!</h3>
            <hr>
                <form action = "/blogs" method="POST">
                    <input class="form-control form-control-lg" type="text" name="blog[title]" placeholder="Title" required>
                    <input class="form-control form-control-lg" type="text" name="blog[image]" placeholder="Img" required>
                    <textarea id="message" class="form-control" type="text" name="blog[body]" placeholder="Your Message" style="width: 100%; height: 150px;" required></textarea>
                    <button id="send" type="submit" class="btn text-start">Post</button>
                </form>   
        </div>
    </div>
</section>

<% include ../partials/footer %>